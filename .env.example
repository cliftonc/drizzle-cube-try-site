# Database Configuration (matches docker-compose.yml)
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: JWT Configuration (if implementing auth)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Optional: CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Enable detailed SQL logging
DATABASE_LOGGING=false

# PDF Export Configuration (required for Export PDF feature)
# Get your account ID from: Cloudflare Dashboard > Account > Account ID
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
# Create an API token with Browser Rendering permissions
CF_BROWSER_RENDERING_TOKEN=your-cloudflare-api-token
# Public URL of the deployed site (local dev won't work with Browser Rendering)
PUBLIC_URL=https://your-site.pages.dev
